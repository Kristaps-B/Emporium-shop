<h1>Listing publishers</h1>
<table  class = "table  table-striped">
<tr>
<th>Name</th>
<th>Show</th>
<th>Edit</th>
<th>Delete</th>


</tr>
<% @publishers.each do |publisher| %>
<tr>
<td><%= publisher.name %></td>
<td><%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, :action => 'show', :id => publisher %></td>
<td><%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, :action => 'edit', :id => publisher %></td>
    
<td><%= button_to 'Delete', {:action => 'destroy', :id => publisher}, method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-default"   %></td>
    
</tr>
<% end %>
</table>
